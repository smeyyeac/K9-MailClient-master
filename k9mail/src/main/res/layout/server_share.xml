        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:text="@string/bilgilendirme"
        android:gravity="center"
        android:textAppearance="@style/ComposeEditTextLarge" />

    <TextView
        android:id="@+id/uzantiTextView"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_below="@+id/bilgiTextView"
        android:layout_marginTop="18dp"
        android:text=""
        android:textAppearance="@style/ComposeEditText" />

    <Button
        android:id="@+id/buttonGozat"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/uzantiTextView"
        android:layout_marginTop="17dp"
        android:text="@string/gozat" />

    <Button
        android:id="@+id/buttonYayinla"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_below="@+id/buttonGozat"
        android:layout_marginTop="15dp"
        android:text="@string/serverYayÄ±nla" />

</RelativeLayout>